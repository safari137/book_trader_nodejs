<% include ../partials/header %>

<div class="container">
    <h2>Update Profile</h2>
    <form method="POST" action="/user/settings">
        <div class="form-group">
            <label>City</label>
            <input type="text" placeholder="City" value="<%= user.city %>" class="form-control" name='user[city]'>
        </div>
        
        <div class="form-group">
            <label>State</label>
            <input type="text" placeholder="State" value="<%= user.state %>" class="form-control" name='user[state]'>
        </div>
        
        <button class="btn btn-primary btn-lg">Save Changes</button>
    </form>
    
    <% if (message.length > 0) { %>
        <div class="alert alert-danger text-center message"><%= message %></div>
    <% } %>
    
    <h2>Update Password</h2>
    <form method="POST" action="/user/settings">
        <div class="form-group">
            <label>Old Passord</label>
            <input type="password" placeholder="Old Password" class="form-control" name='user[oldPassword]'>
        </div>
        
        <div class="form-group">
            <label>New Password</label>
            <input type="password" placeholder="New Password" class="form-control" name='user[newPassword]'>
        </div>
        
        <button class="btn btn-primary btn-lg">Save Changes</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-2.2.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<% include ../partials/footer %>